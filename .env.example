# Data AI Agents - Environment Configuration
# Copy this file to .env and fill in your values
# Never commit .env to version control

# ===========================================
# Azure Configuration
# ===========================================

# Azure Subscription and Tenant
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id

# Service Principal (for CI/CD or non-interactive use)
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret

# Default Azure Region
AZURE_LOCATION=westeurope

# ===========================================
# Microsoft Fabric Configuration
# ===========================================

# Fabric Workspace ID (from Fabric portal URL)
FABRIC_WORKSPACE_ID=your-workspace-id

# Fabric Capacity ID (optional, for capacity management)
# FABRIC_CAPACITY_ID=your-capacity-id

# ===========================================
# Terraform Configuration
# ===========================================

# Environment (dev, test, prod)
TF_VAR_environment=dev

# Project name for resource tagging
TF_VAR_project=data-platform

# Azure region for resources
TF_VAR_location=westeurope

# Backend configuration (for remote state)
# TF_BACKEND_RESOURCE_GROUP=rg-terraform-state
# TF_BACKEND_STORAGE_ACCOUNT=stterraformstate
# TF_BACKEND_CONTAINER=tfstate

# ===========================================
# Databricks Configuration (if used)
# ===========================================

# DATABRICKS_HOST=https://your-workspace.azuredatabricks.net
# DATABRICKS_TOKEN=your-token

# ===========================================
# API Keys (store in Key Vault for production)
# ===========================================

# Example API keys for development only
# API_KEY_EXAMPLE=your-api-key

# ===========================================
# Development Settings
# ===========================================

# Enable debug mode
# DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO
